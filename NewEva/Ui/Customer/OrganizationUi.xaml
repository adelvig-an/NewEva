                            Grid.Column="1"
                            Height="36"
                            MinWidth="240"
                            Margin="16,0"
                            BorderThickness="1"
                            FontFamily="TT Norms Regular"
                            FontSize="14" />
                    </Grid>
                </Border>
                <Border Grid.Row="6" Margin="0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="16,0">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="Номер доверенности" />
                            <TextBox
                                Height="36"
                                MinWidth="240"
                                Margin="0,4,0,0"
                                BorderThickness="1"
                                FontFamily="TT Norms Regular"
                                FontSize="14" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="16,0">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="Дата доверения" />
