                </Border>
                <Border Grid.Row="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Margin="0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="16,0"
                                    VerticalAlignment="Center"
                                    FontFamily="TT Norms Regular"
                                    FontSize="14"
                                    Text="Наименование банка" />
                                <TextBox
                                    Grid.Column="1"
                                    Height="36"
                                    MinWidth="240"
                                    Margin="16,0"
                                    BorderThickness="1"
                                    FontFamily="TT Norms Regular"
                                    FontSize="14" />
                            </Grid>
                        </Border>
                        <Border Grid.Row="1" Margin="0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="16,0"
                                    VerticalAlignment="Center"
                                    FontFamily="TT Norms Regular"
                                    FontSize="14"
                                    Text="БИК" />
                                <TextBox
                                    Grid.Column="1"
                                    Height="36"
                                    MinWidth="240"
                                    Margin="16,0"
                                    BorderThickness="1"
                                    FontFamily="TT Norms Regular"
                                    FontSize="14" />
                            </Grid>
                        </Border>
                        <Border Grid.Row="2" Margin="0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="16,0"
                                    VerticalAlignment="Center"
                                    FontFamily="TT Norms Regular"
                                    FontSize="14"
                                    Text="Расчетный счет" />
                                <TextBox
                                    Grid.Column="1"
                                    Height="36"
                                    MinWidth="240"
                                    Margin="16,0"
                                    BorderThickness="1"
                                    FontFamily="TT Norms Regular"
                                    FontSize="14" />
                            </Grid>
                        </Border>
                        <Border Grid.Row="3" Margin="0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="16,0"
                                    VerticalAlignment="Center"
                                    FontFamily="TT Norms Regular"
                                    FontSize="14"
                                    Text="Корреспондентский счет" />
                                <TextBox
                                    Grid.Column="1"
                                    Height="36"
                                    MinWidth="240"
                                    Margin="16,0"
                                    BorderThickness="1"
                                    FontFamily="TT Norms Regular"
                                    FontSize="14" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                <Border Grid.Row="9" Margin="16">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,4"
                            FontFamily="TT Norms Regular"
                            FontSize="14"
                            Text="Адрес регистрации" />
                        <TextBox
                            Height="36"
                            MinWidth="240"
                            Margin="0,4,0,8"
                            BorderThickness="1"
                            FontFamily="TT Norms Regular"
                            FontSize="14" />
                        <CheckBox
                            Margin="0,8"
                            Content="Адрес регистрации совпадает с адресом проживания"
                            IsChecked="{Binding IsAddressMatch}" />
                        <TextBlock
                            Margin="0,8,0,4"
                            FontFamily="TT Norms Regular"
                            FontSize="14"
                            Text="Адрес проживания" />
                        <TextBox
                            Height="36"
                            MinWidth="240"
                            Margin="0,4,0,0"
                            BorderThickness="1"
                            FontFamily="TT Norms Regular"
                            FontSize="14"
                            IsEnabled="{Binding IsAddressMatch, Converter={StaticResource InverseBooleanConverter}}"
                            Text="{Binding AddressFullActual, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnNotifyDataErrors=True}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>

