<UserControl
    x:Class="NewEva.Ui.Customer.OrganizationUi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NewEva.Ui.Customer"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:NewEva.Ui"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="16,0"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,16"
                FontFamily="TT Norms Bold"
                FontSize="16"
                Text="Организация" />
            <Button
                Margin="16,0"
                HorizontalAlignment="Left"
                Content="Выбрать из списка"
                FontFamily="TT Norms Medium"
                FontSize="16" />
        </DockPanel>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Margin="0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="16,0"
                            VerticalAlignment="Center"
                            FontFamily="TT Norms Regular"
                            FontSize="14"
                            Text="Наименование" />
                        <TextBox
                            Grid.Column="1"
                            Height="36"
                            MinWidth="240"
                            Margin="16,0"
                            BorderThickness="1"
                            FontFamily="TT Norms Regular"
                            FontSize="14" />
                    </Grid>
                </Border>
                <Border Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="16">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="ОГРН" />
                            <TextBox
                                Height="36"
                                MinWidth="240"
                                Margin="0,4,0,0"
                                BorderThickness="1"
                                FontFamily="TT Norms Regular"
                                FontSize="14" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="16">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="Дата регистрации" />
                            <DatePicker
                                Height="36"
                                MinWidth="240"
                                Margin="0,4,0,0"
                                BorderThickness="1"
                                FontFamily="TT Norms Regular"
                                FontSize="14" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="16">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="ИНН" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox
                                    Grid.Column="0"
                                    Height="36"
                                    MinWidth="240"
                                    Margin="0,4,0,0"
                                    BorderThickness="1"
                                    FontFamily="TT Norms Regular"
                                    FontSize="14" />
                                <materialDesign:PackIcon
                                    Grid.Column="1"
                                    Width="18"
                                    Height="18"
                                    Margin="6,0"
                                    VerticalAlignment="Center"
                                    Foreground="Blue"
                                    Kind="AlertCircle"
                                    ToolTip="Быстрый поиск данных организации по ИНН" />
                            </Grid>
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="2"
                            Margin="16">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="КПП" />
                            <TextBox
                                Height="36"
                                MinWidth="240"
                                Margin="0,4,0,0"
                                BorderThickness="1"
                                FontFamily="TT Norms Regular"
                                FontSize="14" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Grid.Row="2" Margin="16">
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        FontFamily="TT Norms Medium"
                        FontSize="14"
                        Text="Руководитель" />
                </Border>
                <Border Grid.Row="3" Margin="0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="16,0">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="Фамилия" />
                            <TextBox
                                Height="36"
                                MinWidth="240"
                                Margin="0,4,0,0"
                                BorderThickness="1"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="{Binding SecondName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnNotifyDataErrors=True}" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="16,0">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="Имя" />
                            <TextBox
                                Height="36"
                                MinWidth="240"
                                Margin="0,4,0,0"
                                BorderThickness="1"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnNotifyDataErrors=True}" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Margin="16,0">
                            <TextBlock
                                Margin="0,0,0,4"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="Отчество" />
                            <TextBox
                                Height="36"
                                MinWidth="240"
                                Margin="0,4,0,0"
                                BorderThickness="1"
                                FontFamily="TT Norms Regular"
                                FontSize="14"
                                Text="{Binding MiddleName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnNotifyDataErrors=True}" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Border Grid.Row="4" Margin="0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="16,0"
                            VerticalAlignment="Center"
                            FontFamily="TT Norms Regular"
                            FontSize="14"
                            Text="Должность руководителя" />
                        <TextBox
                            Grid.Column="1"
                            Height="36"
                            MinWidth="240"
                            Margin="16,0"
                            BorderThickness="1"
                            FontFamily="TT Norms Regular"
                            FontSize="14" />
                    </Grid>
                </Border>
                <Border Grid.Row="5" Margin="0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="16,0"
                            VerticalAlignment="Center"
                            FontFamily="TT Norms Regular"
                            FontSize="14"
                            Text="Действующий на основании" />
